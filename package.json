{
	"name": "zone5",
	"version": "1.1.0",
	"repository": {
		"url": "https://github.com/cwygoda/zone5"
	},
	"license": "MIT",
	"type": "module",
	"bin": {
		"zone5": "./dist/cli/index.js"
	},
	"scripts": {
		"build:cli": "vite build --config vite.cli.config.ts",
		"build:watch": "vite build --watch",
		"build": "svelte-kit sync && svelte-package && pnpm build:cli && publint",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:all": "export CI=1; pnpm test && pnpm test:ui && pnpm test:cli && pnpm test:e2e",
		"test:cli": "vitest src/cli",
		"test:e2e": "playwright test",
		"test:ui": "echo 'No UI integration tests yet' && exit 0",
		"test": "vitest --exclude '**/cli/**'",
		"dagger:test": "dagger -m ./dagger call test --source=.",
		"dagger:test:cli": "dagger -m ./dagger call test-cli --source=.",
		"dagger:test:e2e": "dagger -m ./dagger call test-e2e --source=.",
		"dagger:test:all": "dagger -m ./dagger call test-all --source=.",
		"dagger:check": "dagger -m ./dagger call check --source=.",
		"dagger:lint": "dagger -m ./dagger call lint --source=.",
		"dagger:ci": "dagger -m ./dagger call ci --source=.",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"svelte": "./dist/components/index.js",
			"default": "./dist/components/index.js"
		},
		"./components/atoms": {
			"types": "./dist/components/atoms/index.d.ts",
			"svelte": "./dist/components/atoms/index.js",
			"default": "./dist/components/atoms/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.js"
		},
		"./remark": {
			"types": "./dist/remark.d.ts",
			"default": "./dist/remark.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/test-data/**"
	],
	"peerDependencies": {
		"@lucide/svelte": "^0.553.0",
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"vite": "^7.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@dagger.io/dagger": "^0.19.6",
		"@lucide/svelte": "0.553.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/connect": "^3.4.38",
		"@types/fs-extra": "^11.0.4",
		"@types/jsdom": "^27.0.0",
		"@types/mdast": "^4.0.4",
		"@types/node": "^24.10.0",
		"@types/prompts": "^2.4.9",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"mdsvex": "^0.12.6",
		"publint": "^0.3.15",
		"semantic-release": "^25.0.2",
		"svast": "^0.2.1",
		"svelte": "^5.43.5",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vitest": "^4.0.8"
	},
	"dependencies": {
		"@eslint/js": "^9.39.1",
		"@opentelemetry/api": "^1.9.0",
		"@rollup/pluginutils": "^5.3.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@tailwindcss/vite": "^4.1.17",
		"@trivago/prettier-plugin-sort-imports": "^6.0.0",
		"blurhash": "^2.0.5",
		"commander": "^13.1.0",
		"dayjs": "^1.11.19",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"exifr": "^7.1.3",
		"fast-average-color-node": "^3.1.0",
		"fs-extra": "^11.2.0",
		"globals": "^16.5.0",
		"mime": "^4.1.0",
		"ora": "^9.0.0",
		"picocolors": "^1.1.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prompts": "^2.4.2",
		"remark": "^15.0.1",
		"sharp": "^0.34.5",
		"smol-toml": "^1.4.2",
		"svast-stringify": "^0.1.1",
		"sveltekit-search-params": "^3.0.0",
		"typescript-eslint": "^8.47.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"vfile": "^6.0.3",
		"zod": "^4.1.12",
		"zod-config": "^1.4.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
